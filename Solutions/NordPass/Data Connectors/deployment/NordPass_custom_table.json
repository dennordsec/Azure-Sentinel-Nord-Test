{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Log Analytics workspace"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/tables",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('workspaceName'), '/NordPassEventLogs_CL')]",
      "properties": {
        "schema": {
          "name": "NordPassEventLogs_CL",
          "columns": [
            {
              "name": "action",
              "type": "string"
            },
            {
              "name": "initiator",
              "type": "string"
            },
            {
              "name": "metadata",
              "type": "dynamic"
            },
            {
              "name": "organization_uuid",
              "type": "string"
            },
            {
              "name": "TimeGenerated",
              "type": "datetime"
            },
            {
              "name": "timestamp",
              "type": "long"
            },
            {
              "name": "user_email",
              "type": "string"
            },
            {
              "name": "user_uuid",
              "type": "string"
            },
            {
              "name": "event_type",
              "type": "string"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "tableResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces/tables', parameters('workspaceName'), 'NordPassEventLogs_CL')]"
    }
  }
}
